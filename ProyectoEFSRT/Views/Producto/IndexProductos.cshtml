@model IEnumerable<ProyectoEFSRT.Models.Producto>

@{
    ViewBag.Title = "IndexProductos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Create New", "CreateProducto", null, new { @class = "btn btn-info" })
</p>

<p>
    <a href="@Url.Action("GenerarPdf", "Producto")" class="btn btn-secondary">Generar PDF</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StkProd)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StkProd)
        </td>
        <td>
            @Html.ActionLink("Modificar", "EditProducto", new {  id=item.CodProd }, new { @class = "btn btn-success btn-sm" }) |
            @Html.ActionLink("Ver Detalle", "Details", new {  id=item.CodProd }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Eliminar", "BorrarProducto", new {  id=item.CodProd }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
